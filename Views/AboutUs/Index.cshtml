@{
    ViewData["Title"] = "About Me";
}

@model List<MyPortfolio.Models.AboutUs>


<section class="hero py-5 about-section">
    <div class="container">
        <!-- Intro -->
        <div class="text-center mb-5 scroll-up">
            <h2 class="display-5 fw-bold text-gold">About Me</h2>
            <p class="fw-light">Creative thinker. Problem solver. Passionate about clean, efficient code.</p>
        </div>

        <div class="row align-items-center mb-5">
            <!-- Image -->
            <div class="col-md-5 text-center scroll-up">
                <img src="/images/profile.png" class="img-fluid rounded-circle shadow-lg" alt="Alaa Fayyad" style="max-height: 300px;">
            </div>

            <!-- Bio -->
            <div class="col-md-7 scroll-up">
                <h4 class="text-gold mb-3 section-title">Hi, I’m Alaa Fayyad 👋</h4>
                <p class="">
                    I'm a software developer based in Beirut, Lebanon, with experience in Python, C#, ASP.NET Core, and modern web development. I specialize in building elegant, responsive, and functional websites and APIs.
                </p>
                <p class="">
                    I enjoy solving complex problems and collaborating on meaningful projects. My background in business computing allows me to approach software not just technically, but strategically.
                </p>
                <a href="/files/Alaa_Fayyad_Resume.docx" class="btn btn-gold me-3 mt-3" target="_blank">📄 Download CV</a>
                <a href="/Contact" class="btn btn-dark mt-3">Contact Me</a>
            </div>
        </div>

        <!-- Skills --> 
        <section id="skills">
        <div class="scroll-up mt-5">
            <h4 class="text-gold mb-3 text-center section-title">Skills & Technologies</h4>
            <ul class="list-unstyled">
                <li class="mb-2">
                    <strong class="text-gold">🧠 Languages & Frameworks:</strong>
                    Python (Flask, FastAPI), C#, ASP.NET Core
                </li>
                <li class="mb-2">
                    <strong class="text-gold">🧰 Tools & Technologies:</strong>
                    Git, SQL, Bootstrap, REST APIs
                </li>
                <li class="mb-2">
                    <strong class="text-gold">🎨 Front-End:</strong>
                    Razor, JavaScript, HTML5/CSS3, UI/UX
                </li>
                <li class="mb-2">
                    <strong class="text-gold">⚙️ Other:</strong>
                    Web scraping, SEO, Automation
                </li>
            </ul>
        </div>
        </section>

        <!-- Experience Summary -->
        <section id="experience">
        <div class="scroll-up mb-5 py-5">
            <h4 class="text-gold mb-3 text-center section-title">Professional Experience</h4>
            @foreach (var project in Model)
            {
                <ul class="list-unstyled">
               <li class="mb-2">
                <div class="experience">
                    <p><strong>🛠️ @project.JobTitle</strong> — @project.Company (@project.Duration)</p>
                <p>
                    @project.Description
                </p>
            </div>
            </li>
            </ul>
            }
        </div>
        </section>

        <!-- Call to Action -->
        <section id="projects">
        <div class="text-center mt-5 scroll-up">
            <h4 class="section-title">Want to explore my work?</h4>
            <a href="/Projects" class="btn btn-gold mt-3 me-3">💼 View My Projects</a>
            <a href="/Contact" class="btn btn-dark mt-3">📬 Contact Me</a>
        </div>
        </section>

    </div>
</section>
