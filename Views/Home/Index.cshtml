@{
    var jsonOptions = new JsonSerializerOptions { PropertyNamingPolicy = JsonNamingPolicy.CamelCase };
}
<section class="hero py-5 container scroll-up">
    <h2 class="text-center text-gold fw-bold mb-4 section-title">&lt;CodeWisdom /&gt;</h2>

    <div class="quote-box text-center my-5 position-relative overflow-hidden" style="height: 120px;">
        <div id="quote1" class="quote-slide position-absolute w-100"></div>
        <div id="quote2" class="quote-slide position-absolute w-100 d-none text-gold"></div>
    </div>
</section>
@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const quotes = @Html.Raw(JsonSerializer.Serialize(Model.QuoteList, new JsonSerializerOptions { PropertyNamingPolicy = JsonNamingPolicy.CamelCase }));

            let index = 0;
            let current = document.getElementById("quote1");
            let next = document.getElementById("quote2");

            function showQuote(el, quote) {
                       el.innerHTML = ""; // Clear existing content

            const blockquote = document.createElement("blockquote");
            blockquote.className = "blockquote fs-4 fw-semibold text-gold";
            blockquote.textContent = quote.quoteText;

            const footer = document.createElement("blockquote-footer");
            footer.className = "blockquote-footer mt-2 text-gold";
            footer.textContent = quote.author;

            el.appendChild(blockquote);
            el.appendChild(footer);

            }

            function slideQuotes() {
                let quote = quotes[index];
                showQuote(next, quote);

                next.classList.remove('d-none');
                next.classList.remove('slide-out');
                next.classList.add('slide-in');

                // After a moment, swap visibility
                setTimeout(() => {
                    current.classList.remove('show');
                    current.classList.add('slide-out');
                    next.classList.remove('slide-in');
                    next.classList.add('show');

                    // Swap references
                    [current, next] = [next, current];

                    // Hide the one that just slid out
                    setTimeout(() => {
                        next.classList.add('d-none');
                        next.classList.remove('slide-out');
                    }, 600);

                }, 10);

                index = (index + 1) % quotes.length;
            }

            // Initial load
            showQuote(current, quotes[index]);
            current.classList.add('show');
            index++;

            // Start rotation
            setInterval(slideQuotes, 7000);
        });
    </script>
}

