@model MyPortfolio.Models.ContactInfo

<footer class="site-footer  py-1">
    <div class="container">
        <div class="row align-items-center">
            <!-- Left: Contact Info -->
            <div class="col-md-6 text-center text-md-start">
                <h4 class="text-gold mb-3">📬 Contact</h4>
                <ul class="list-unstyled">
                    @if (!string.IsNullOrEmpty(Model.Email))
                    {
                        <li class="mb-2"><i class="bi bi-envelope-fill me-2"></i><a class=" footer-icons" href="mailto:@Model.Email">@Model.Email</a></li>
                    }
                    @if (!string.IsNullOrEmpty(Model.Phone))
                    {
                        <li class="mb-2"><i class="bi bi-telephone-fill me-2 "></i><a class="footer-icons" href="tel:@Model.Phone">@Model.Phone</a></li>
                    }
                    @if (!string.IsNullOrEmpty(Model.Whatsapp))
                    {
                        <li class="mb-2"><i class="bi bi-whatsapp me-2 "></i><a class="footer-icons" target="_blank" href="https://api.whatsapp.com/send/?phone=@Model.Whatsapp&text=&type=phone_number&app_absent=0">WhatsApp</a></li>
                    }
                    @if (!string.IsNullOrEmpty(Model.Address))
                    {
                        <li class="mb-2 text-light"><i class="bi bi-geo-alt-fill me-2 footer-icons"></i>@Model.Address</li>
                    }
                </ul>
            </div>

            <!-- Right: Social Links -->
            <div class="col-md-6 text-center text-md-end">
                <h5 class="text-gold mb-3">🔗 Follow Me</h5>
                <div class="d-flex justify-content-center justify-content-md-end gap-3 fs-5">
                    @if (!string.IsNullOrEmpty(Model.LinkedIn))
                    {
                        <a href="https://www.linkedin.com/in/@Model.LinkedIn" target="_blank" class="text-gold footer-icons"><i class="bi bi-linkedin"></i></a>
                    }
                    @if (!string.IsNullOrEmpty(Model.GitHub))
                    {
                        <a href="@Model.GitHub" target="_blank" class="text-gold footer-icons"><i class="bi bi-github"></i></a>
                    }
                    @if (!string.IsNullOrEmpty(Model.Instagram))
                    {
                        <a href="https://www.instagram.com/@Model.Instagram" target="_blank" class="text-gold footer-icons"><i class="bi bi-instagram"></i></a>
                    }
                    @if (!string.IsNullOrEmpty(Model.Facebook))
                    {
                        <a href="@Model.Facebook" target="_blank" class="text-gold footer-icons"><i class="bi bi-facebook"></i></a>
                    }
                </div>
            </div>
        </div>

        <hr class="border-light my-4" />

        <p class="text-center small mb-0">© @DateTime.Now.Year Alaa Fayyad. All rights reserved.</p>
    </div>
</footer>
